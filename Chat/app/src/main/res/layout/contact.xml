<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#000000">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contactProfilePic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:strokeColor="#ffffff"
        app:strokeWidth="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Username"
            android:textColor="@color/color_contact_list"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/contactLastMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="The last message will be here"
            android:textColor="@color/color_contact_list"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contactLMDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="bottom|end"
            android:text="21/01/2023 14:53"
            android:textColor="@color/color_contact_list" />
    </LinearLayout>

</LinearLayout>

